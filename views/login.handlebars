<div class="card w-45 text-white bg-light mb-3">
<form class="login-form align-content-center">
  <div>
    <label for="email-login"></label>
    <input type="text" id="email-login" placeholder="Email" />
  </div>
  <div>
    <label for="password-login"></label>
    <input type="password" id="password-login" placeholder="Password" />
  </div>
  <div>
    <button class="btn btn-secondary" data-bs-toggle="button" type="submit">Login</button>
  </div>
</form>

<form class="signup-form">
  <div>
    <label for="username-signup"></label>
    <input type="text" id="username-signup" placeholder="User Name" />
  </div>
  <div>
    <label for="email-signup"></label>
    <input type="text" id="email-signup" placeholder="Email" />
  </div>
  <div>
    <label for="password-signup"></label>
    <input type="password" id="password-signup" placeholder="Password" />
  </div>
  <div>
    <button class="btn btn-secondary" data-bs-toggle="button" type="submit">Signup</button>
    <button type="button" class="btn btn-light text-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">?</button>
  </div>
  <div class="modal fade text-primary" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Password Requirements</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        - Must be atleast 4 characters in length <br>
        - Must inlude Upper and Lower case letters <br>
        - Must include atleast one number <br>
        - Must not excede 10 characters
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
</form>
</div>

<script src="/javascript/login.js"></script>